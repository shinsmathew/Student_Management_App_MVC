@model Student_Management_App_MVC.Models.DTOs.User.UserLoginDto

@{
    ViewData["Title"] = "Login";
}


@section Styles {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

<div class="auth-card">
        <div 
            <img src="/images/logo.png" alt="Logo" style="height: 50px; margin-bottom: 1rem;"> 
        </div>
    <div 
        class="brand-logo">STUDENT MANAGEMENT
    </div>

    <div class="auth-header">
        <h1>SIGN IN</h1>
    </div>

   <form asp-action="Login" class="auth-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" class="form-control" placeholder="Enter username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary">Sign In</button>
        
        <div class="auth-link">
            Don't have an account? <a asp-action="Register">Sign Up</a>
        </div>
    </form>
</div>