@model IEnumerable<Student_Management_App_MVC.Models.DTOs.Student.StudentReadDto>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <h1 class="text-center mb-4">Student Management</h1>

    <div class="d-flex justify-content-between mb-3">
        <h3>Students List</h3>
        <a asp-action="AdminAdd" class="btn btn-success">Add New Student</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>DOB</th>
                <th>Email</th>
                <th>Phone</th>
                <th>School</th>
                <th>Course</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.StudentID</td>
                    <td>@student.StudentName</td>
                    <td>@student.DateOfBirth</td>
                    <td>@student.StudentEmail</td>
                    <td>@student.PhoneNumber1</td>
                    <td>@student.SchoolName</td>
                    <td>@student.Course</td>
                    <td>
                        <a asp-action="AdminEdit" asp-route-id="@student.StudentID" class="btn btn-primary btn-sm">Edit</a>
                        <form asp-action="AdminDelete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@student.StudentID" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this student?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>