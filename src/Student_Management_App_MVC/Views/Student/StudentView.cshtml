@model IEnumerable<Student_Management_App_MVC.Models.DTOs.Student.StudentReadDto>

@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "_LayoutStudent"; 
}

<div class="student-container">
    <div class="student-header">
        <h1><i class="fas fa-user-graduate"></i> Student Dashboard</h1>
        <div class="student-actions">
            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="btn btn-outline-secondary">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </form>
        </div>
    </div>

    <div class="student-content">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h3 class="card-title mb-0">
                    <i class="fas fa-list"></i> Student Directory
                </h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>FullName</th>
                                <th>FullAddress</th>
                                <th>Email</th>
                                <th>Phone1</th>
                                <th>Phone2</th>
                                <th>DOB</th>
                                <th>School</th>
                                <th>Class</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rowNumber = 1;
                            }
                            @foreach (var student in Model)
                            {
                                <tr>
                                    <td>@(rowNumber++)</td>
                                    <td>@student.StudentID</td>
                                    <td>@student.StudentName</td>
                                    <td>@student.FullAddress</td>
                                    <td>@student.StudentEmail</td>
                                    <td>@student.StudentPhone1</td>
                                    <td>@student.StudentPhone2</td>
                                    <td>@student.DateOfBirth.ToString("dd/MM/yyyy")</td>
                                    <td>@student.SchoolName</td>
                                    <td>@student.Course</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer text-muted">
                Showing @Model.Count() students
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/student.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}